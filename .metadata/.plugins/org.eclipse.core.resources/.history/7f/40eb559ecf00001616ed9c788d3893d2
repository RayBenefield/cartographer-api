	private ObjectMapper mapper;

	@Override
	public PlayerGameCounts savePlayerGameCounts(PlayerGameCounts counts) {
		// TODO Auto-generated method stub
		return null;
	}
	
	public PlayerGameCountsSnsWriter(String topicArn) {
		this.topicArn = topicArn;
