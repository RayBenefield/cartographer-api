{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "PlayerGameCounts": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": 1,
                    "WriteCapacityUnits": 1
                },
                "AttributeDefinitions": [
                    {
                        "AttributeName": "Gamertag",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "Gamertag",
                        "KeyType": "HASH"
                    }
                ],
                "StreamSpecification": {
                    "StreamViewType": "NEW_AND_OLD_IMAGES"
                }
            }
        }
    }
}
